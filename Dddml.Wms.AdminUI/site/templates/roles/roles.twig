{% extends "share/base.twig" %}
{% block top %}
{% endblock %}
{% block main %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            空白页面演示
            <small>最基本的结构模板</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> 首页</a></li>
            <li><a href="#">页面演示</a></li>
            <li class="active">空白页面</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">标题</h3>
            </div>
            <div class="box-body no-padding">
                {% if entities|length %}
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>RoleId</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Active</th>
                            <th>Version</th>
                            <th>CreatedBy</th>
                            <th>CreatedAt</th>
                            <th>UpdatedBy</th>
                            <th>UpdatedAt</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.roleId }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.description }}</td>
                                <td>{{ entity.active }}</td>
                                <td>{{ entity.version }}</td>
                                <td>{{ entity.createdBy }}</td>
                                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td>{{ entity.updateBy }}</td>
                                <td>{{ entity.updateAt|date('Y-m-d H:i:s') }}</td>
                                <td>
                                    <a href="{{ path('role', {id: entity.RoleId}) }}" class="btn btn-sm bg-light-blue" target="_blank">查看</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li><a href="#"><i class="fa fa-angle-double-left"></i></a></li>
                    <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                    <li><a>{{ firstResult + 1 }} - {{ firstResult + maxResults }} 共 {{ count }} 条</a></li>
                    <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                    <li><a href="#"><i class="fa fa-angle-double-right"></i></a></li>
                </ul>
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
{% endblock %}
            {% block bottom %}
            {% endblock %}